<div class="wrapper-blue">
  <div class="header-banner">
    <div class="header-title">
      <h1>Your Personal Details</h1>
      <h2>Information required to set up your account</h2>
    </div>
    <div class="round-icon">
      <i><span class="fa fa-pencil"></span></i>
    </div>
  </div>

  <div class="facebook-fetching white-box">
    <%= link_to "Use your facebook account", omniauth_authorize_path(current_user, :facebook), class: 'btn btn-block btn-social btn-facebook facebook-button' %><br />
  </div>

  <div class="container white-box">
    <div class="details-form">
      <%= simple_form_for current_user do |f| %>
        <%= f.input :email %>
        <%= f.input :gender, as: :radio_buttons %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :address  %>
        <%= f.input :city %>
        <%= f.input :postcode %>
        <%= f.input :employment %>
        <%= f.input :date_of_birth, as: :date_picker %>
        <%= f.input :photo_id %>
        <%= f.button :submit, class: 'btn-royal-blue' %>
      <% end %>
    </div>
  </div>
</div>
