<div class="wrapper-grey">
  <div class="banner" id="home-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path('home_background.jpg') %>);">

    <div class="banner-content">
      <%= link_to(new_user_loan_path(@user)) do %>
        <p><strong>Apply now.</strong> The new way<br>to access a loan.</p>
        <button class="btn btn-transparent">Apply for a loan</button>
      <% end %>
    </div>
  </div>

  <div class="header-banner-white">
    <%= link_to(user_status_path(@user)) do %>
      <div id="tab-monitor">
        <h1>Monitor your situation</h1>
        <p>Track your progress over time</p>
        <br>
        <p class="sixteen-center text-red"><%= "Something requires your attention" if @user.notifications.present? %></p>
        <p></p>
      </div>
    <% end %>
  </div>

  <div class="header-banner-white">
    <%= link_to(user_profile_path(@user)) do %>
      <div id="tab-details">
        <h1>Your Profile</h1>
        <p>Your details are important to us</p>
        <p class="sixteen-center text-red"><%= "Details uncompleted" if @user.details_completed != true %></p>
      </div>
    <% end %>
  </div>

  <div class="header-banner-white">
    <%= link_to(user_share_path(@user)) do %>
      <div id="tab-share">
        <h1>Share Stride with people you know</h1>
        <p>Get benefits from sharing with your friends</p>
      </div>
    <% end %>
  </div>
</div>
