<div class="wrapper-blue">
  <div class="banner" id="home-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path('background.jpg') %>);">

    <div class="banner-content">
      <p><strong>Apply now</strong>. A new way<br> to access to a loan.</p>

      <%= simple_form_for(:user, url: user_registration_path) do |f| %>
        <%= f.input :mobile_number, placeholder: 'Mobile phone number', error: 'Please enter a mobile phone number', label: false, input_html: {class: 'round-input'} %>
        <%= f.button :submit , 'Apply for a loan', class: 'btn btn-transparent' %>
      <% end %>
    </div>
  </div>

<div class="container container-values white-box">
  <div class="row">
    <div class="col-xs-6 col-md-3">
      <i class="fa fa-money"></i>
      <p> Access to a lending platform</p>
    </div>
    <div class="col-xs-6 col-md-3">
      <i class="fa fa-fighter-jet"></i>
      <p>Fast application and review process</p>
    </div>
    <div class="col-xs-6 col-md-3">
      <i class="fa fa-university"></i>
      <p>No branch as everything happens on your mobile</p>
    </div>
    <div class="col-xs-6 col-md-3">
      <i class="fa fa-handshake-o"></i>
      <p>Responsible financial behaviours are rewarded</p>
    </div>
  </div>

</div>



