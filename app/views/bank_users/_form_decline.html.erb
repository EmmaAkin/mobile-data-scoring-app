<%= simple_form_for @loan do |f| %>
    <%= f.error_notification %>

    <%= f.input :final_date %>
    <%= f.input :decline_reasons %>
    <%= f.hidden_field :status, value: "Applicaton Declined" %>
    <div class="form-actions">
      <%= f.button :submit, "Decline", class: "navbar-wagon-button" %>
    </div>
  <% end %>
