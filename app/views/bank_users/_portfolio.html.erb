<div class="portfolio-data">
  <div class="loans-data">
    <div id="net-balance">
      <%= current_bank_user.bank.net_balance_sheet %>
    </div>
    <div id="pending-feedback">
      <%= current_bank_user.bank.pending_response %>
    </div>
    <div id="pending-repayment">
      <%= current_bank_user.bank.pending_repayment %>
    </div>
  </div>

  <div class="scoring-data">
    <div id="average-score-total">
      <%= current_bank_user.bank.average_score_of_active_customers %>
    </div>
    <div id="average-score-pending">
      <%= current_bank_user.bank.average_score_of_pending_customers %>
    </div>
  </div>

  <div class="client-data">
    <div id="number-current-customers">
      <%= current_bank_user.bank.customers %>
    </div>
    <div id="retention-rate">
      75%
    </div>
    <div id="total-users-historical">
      <%= current_bank_user.bank.total_sers %>
    </div>
  </div>
</div>

