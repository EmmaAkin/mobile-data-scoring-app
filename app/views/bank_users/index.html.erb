  <div class="tabs">
    <%= link_to applications_bank_user_path(current_bank_user),class: "tab active", remote: true do %>
      <h3>Applications</h3>
    <% end %>

    <%= link_to outstanding_bank_user_path(current_bank_user), anchor: "outstanding", class: "tab", remote: true do %>
      <h3>Loans Outstanding</h3>
    <% end %>

    <%= link_to declined_bank_user_path(current_bank_user), class: "tab", remote: true do %>
      <h3>Applications Declined</h3>
    <% end %>

    <%= link_to repaid_bank_user_path(current_bank_user),class: "tab", remote: true do %>
      <h3>Loans Repaid</h3>
    <% end %>

    <%= link_to portfolio_bank_user_path(current_bank_user), class: "tab", remote: true do %>
      <h3>Portfolio</h3>
    <% end %>
  </div>

<div class="wrapper-grey">
  <div class="container">
    <div id="tab-content">

      <div class="0" id="loan-applications-content">
        <%= render 'bank_users/loan_applications'%>
      </div>
      <div class="1 hidden" id="loans-content">
        <%= render 'bank_users/loans'%>
      </div>
      <div class="2 hidden" id="loans-declined-content">
        <%= render 'bank_users/loan_applications_declined'%>
      </div>
      <div class="3 hidden" id="loans-repaid-content">
      <%= render 'bank_users/repaid_loans'%>
      </div>
      <div class="4 hidden" id="portfolio-content">
        <%#= render 'portfolio'%>
      </div>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <script>

    // stores the anchor from the url in a variable
    var hash = window.location.hash;

    // If page is reloaded then the same tab will be shown
    if (hash !== "") {
      $('.tab').removeClass("active");
      $('a[href="' + hash + '"]').addClass("active");
      var childIndex = $('a[href="' + hash + '"]').index();
      $('#tab-content').children().addClass("hidden");
      $('.' +childIndex).removeClass("hidden");
    }

    // Clicking on a different tab changes the content shown on the page
    $('.tab').on('click', function(event){
      $('.tabs').children().removeClass("active");
      $(this).addClass("active");
      var childIndex = $(this).index();
      $('#tab-content').children().addClass("hidden");
      $('.' +childIndex).removeClass("hidden");
    })
  </script>
<% end %>
